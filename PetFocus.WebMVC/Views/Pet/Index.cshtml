@model IEnumerable<PetFocus.Models.PetModel.PetListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Pet</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
@using (Html.BeginForm())
            {
                <p>
                    Find by Pet name: @Html.TextBox("SearchString")
                    <input type="submit" value="Search" />
                </p>
            }
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.PetId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.PetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Species)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PetSex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsSpayedNeutered)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Breed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MicrochipNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HasDiabetes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    @*<td>
            @Html.DisplayFor(modelItem => item.PetId)
        </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.PetName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Species)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PetSex)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsSpayedNeutered)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Breed)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Birthdate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MicrochipNum)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.VetName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HasDiabetes)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.PetId }) |
        @Html.ActionLink("Details", "Details", new { id = item.PetId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.PetId })
    </td>
</tr>
    }

</table>
